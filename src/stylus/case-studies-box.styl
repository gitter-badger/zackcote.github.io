.case-studies-title
    position absolute
    top space
    left space
    z-index 200

.case-studies-box
    height 40rem
    position relative
    background color-primary
    span(1)
    color color-background
    text-align left

.case
    {z-transition}
    height 20rem
    position relative
    span(1/1)
    +above(beta)
        span(1/2)
        height 100%

.eye-case
    position relative
    background url("/assets/img/eye-featured.jpg")
    background-size cover
    &:after
        +below(alpha)
            background alpha(color-eye, .5)
        position absolute
        width 100%
        height 100%
        background alpha(color-primary, .7)
        {z-transition}
    &:hover:after
            background alpha(color-eye, .5)

.baywood-case
    position relative
    background url("/assets/img/baywood-featured.jpg")
    background-size cover
    &:after
        +below(alpha)
            background alpha(color-baywood, .5)
        position absolute
        width 100%
        height 100%
        background alpha(color-primary, .7)
        {z-transition}
    &:hover:after
        background alpha(color-baywood, .5)

.case-content
    background none
    color color-background
    position absolute
    bottom 0
    left space
    opacity 0
    z-index 1000
    padding-right 2rem
    {z-transition}
    {font-small}
    h3
        {font-base}
    +below(beta)
        opacity 1
    +above(beta)
        {font-medium}
        h3
            margin-bottom 1rem
            text-align left
            {font-xmedium}

.active > .case-content
    +above(beta)
        bottom space
        opacity 1