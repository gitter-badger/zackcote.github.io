.ss-wrapper .animated
  animation-duration 0.25s
  transition-timing-function ease-in
  animation-fill-mode both

.ss-wrapper .animated--fadeIn
  animation-name fadeIn

.ss-wrapper .animated--slideInRight
  animation-name slideInRight

.ss-wrapper .animated--fadeInTop
  animation-name fadeInTop
  cf()

.ss-wrapper.is-exiting .animated
  animation-direction alternate-reverse

@keyframes fadeIn
    0%
        opacity 0
        background none
    100%
        opacity 1

@keyframes slideInRight
    0%
        opacity 0
        transform translate3d(100%, 0, 0);
    100%
        opacity 1
        transform none

@keyframes fadeInTop
    0%
        opacity 0
        transform translate3d(0, 100%, 0)
        background none
    100%
        opacity 1
        transform none