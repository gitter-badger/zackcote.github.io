.box
    +below(alpha)
        margin-top 2rem
    col(1/1)
    clear both
    background-color color-secondary
    overflow hidden
    margin-bottom 2rem

.box__title
    margin-bottom 1rem

.accent-line
    height 1rem
    width 14rem
    background color-accent
    margin-bottom 2.5rem

.box__content
    padding 2rem 2rem 2rem 3rem
    margin-top 4rem
    background color-background
    width 90%
    float right
    +above(alpha)
        margin-top 15rem
        col(2/3)
        padding 5rem
        float right
    +above(gamma)
        max-width 100rem
        margin-top 30rem

.eye-box
    background rgba(236,64,122,1)
    +above(alpha)
        background linear-gradient(to bottom, rgba(236,64,122, .3) 0%, rgba(236,64,122,1) 30rem, rgba(236,64,122,1) 100%), url('/assets/img/eye-featured.jpg') no-repeat
        background-size contain !important
        background-position bottom, top
    +above(beta)
        background linear-gradient(to bottom, rgba(236,64,122, .3) 0%, rgba(236,64,122,1) 40rem, rgba(236,64,122,1) 100%), url('/assets/img/eye-featured.jpg') no-repeat
    +above(gamma)
        background linear-gradient(to bottom, rgba(236,64,122, .3) 0%, rgba(236,64,122,1) 60rem, rgba(236,64,122,1) 100%), url('/assets/img/eye-featured.jpg') no-repeat

.baywood-box
    background rgba(28,123,172, 1)
    +above(alpha)
        background linear-gradient(to bottom, rgba(28,123,172, .3) 0%, rgba(28,123,172,1) 29rem, rgba(28,123,172,1) 100%), url('/assets/img/baywood-featured.jpg') no-repeat
        background-position bottom, top
        background-size contain !important
    +above(beta)
        background linear-gradient(to bottom, rgba(28,123,172, .3) 0%, rgba(28,123,172,1) 45rem, rgba(28,123,172,1) 100%), url('/assets/img/baywood-featured.jpg') no-repeat
    +above(gamma)
        background linear-gradient(to bottom, rgba(28,123,172, .3) 0%, rgba(28,123,172,1) 93rem, rgba(28,123,172,1) 100%), url('/assets/img/baywood-featured.jpg') no-repeat
