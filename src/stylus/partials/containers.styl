.wrapper
    // padding border-width
    min-height 100vh
    display flex
    flex-direction column
    // background color-secondary
    +above(alpha)
        margin 0 auto
        padding-left border-width * 2
        padding-right border-width * 2
        padding-bottom border-width * .5
        padding-top border-width * 2
    +above(beta)
        width beta
    +above(gamma)
        width gamma

.content
    background color-background
    +above(alpha)
        span(2/3, cycle: 2)
        padding-right 2.5rem
.sidebar
    background color-background
    +above(alpha)
        span(1/3, cycle: 2)
        padding-left 2.5rem

.behind-index
    +below(alpha)
        margin 2rem
    background color-secondary
    overflow hidden
    cf()

