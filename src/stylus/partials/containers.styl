.wrapper
    // padding border-width
    min-height 100vh
    display flex
    flex-direction column
    // background color-secondary
    +above(alpha)
        margin 0 auto
        padding-left space * 2
        padding-right space * 2
        padding-bottom space * .5
        padding-top space * 2
    +above(beta)
        width beta
    +above(gamma)
        width 95%
        max-width 200rem

.content
    background color-background
    +above(beta)
        span(2/3, cycle: 2)
        padding-right 2.5rem
.sidebar
    background color-background
    +above(beta)
        span(1/3, cycle: 2)
        padding-left 2.5rem

.behind-index
    +below(alpha)
        margin space
    background color-secondary
    overflow hidden
    cf()

