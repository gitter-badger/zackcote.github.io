//breakpoints
alpha = 600px
beta  = 900px
gamma = 1200px

//global colors
color-primary   = #504B68
color-primary--light = lighten(color-primary, 30%)
color-secondary = #3e372d
color-accent = #AD4444
color-background = white

//spacing
section-space = 3rem
paragraph-space = 1.5rem
border-width = 2rem


//typography variables
font-base = 1.8rem
font-small = font-base * .8rem
font-medium = 2.2rem
font-large = 2.5rem
font-xlarge = 3.8rem
lh-small = 1.85rem
lh-base = font-base * 1.555555555rem
lh-medium = 2.5rem
lh-large = 2.5rem
lh-xlarge = 4rem
//type styles

font-base =
    font-size font-base
    line-height lh-base

font-small =
    font-size font-small
    line-height lh-small

font-medium =
    font-size font-medium
    line-height lh-medium

font-large =
    font-size font-large
    line-height lh-large

font-xlarge =
    font-size font-xlarge
    line-height lh-xlarge