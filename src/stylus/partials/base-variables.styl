//breakpoints
alpha = 600px
beta  = 900px

//global colors
z-primary   = #504B68
z-secondary = white
primary-shifted = hue(z-primary, 35%)
z-accent = darken(primary-shifted, 40%)

//spacing
section-space = 3rem
paragraph-space = 1.5rem

//typography variables
font-base = 1.8rem
font-small = font-base * .8rem
font-medium = 2.2rem
font-large = 3rem
lh-base = font-base * 1.555555555rem
lh-medium = 2.5rem
lh-large = 3.3rem
border-width = 2rem

//type styles

font-base =
    font-size font-base
    line-height lh-base

font-small =
    font-size font-small
    line-height lh-small

font-medium =
    font-size font-medium
    line-height lh-medium

font-large =
    font-size font-large
    line-height lh-large