.header
    +below(alpha)
        margin 2rem 2rem 0 2rem
    border-bottom 1rem solid color-accent
    margin-bottom 3rem

.header--brown
    border-color color-secondary

.site-title
    +below(alpha)
         margin 0 2rem 2rem 0
    float left
    font-weight 100
    {font-medium}
    margin-bottom 2rem
    &:before
        content "{ "
        color color-accent
        font-weight bold
    &:after
        content " }"
        color color-accent
        font-weight bold

.header span
    display none
    color color-primary--light
    +above(alpha + 10rem)
        display inline
        float left
        margin-left 2rem

.site-nav
    text-align center
    margin 2rem
    {plainList}
    li a
        padding 1rem 2rem
        &:hover
            background color-accent
            color white
    +above(alpha)
        li
            padding 1rem
        li a
            padding 1rem 2rem

