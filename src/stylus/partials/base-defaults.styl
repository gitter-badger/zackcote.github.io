html
    font-size 62.5%

body
    {font-base}
    font-family 'sweden_sans', Arial, sans-serif
    background color-background
    color color-primary

img
    max-width 100%
    height auto

p, ul, ol, img, .highlight
    margin-bottom 2.5rem

ul
    list-style-position inside

main
    flex 1

h1
    {font-large}
    +above(beta)
        {font-xlarge}

h2, h3, h4, h5, h6
    {font-xmedium}
    +above(beta)
        {font-large}

h2
    margin-bottom 1rem

a
    {z-transition}
    text-decoration none
    color inherit
    &:hover
        color color-accent

p a
    color color-accent
    font-weight bold
    &:hover
        text-decoration underline

p code
    background color-primary
    color white
    padding .25rem .5rem

.button
    padding 1rem space 1rem space
    border none
    color white
    font-weight bold
    background color-primary
    display inline