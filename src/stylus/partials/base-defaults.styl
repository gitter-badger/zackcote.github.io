html
    font-size 62.5%

body
    font-size base-font
    line-height base-line-height
    font-family 'open-sans', sans-serif

img
    max-width 100%
    height auto

p, ul, ol
    margin-bottom paragraph-space


//layout - structure is body > .wrapper > .header + main + .footer

.wrapper
    padding border-width
    min-height 100%
    min-height 100vh
    display flex
    flex-direction column
    +above(beta)
        padding border-width * 2

.header
    padding-bottom section-space
    margin-bottom section-space
    border-bottom 1rem solid z-black

.header a
    {plainLink}
    {z-transition}
    &:hover
      color z-red  

main
    flex 1
    +above(beta)
        width 60rem
        margin 0 auto


.footer
    margin-top section-space


