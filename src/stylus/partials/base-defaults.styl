html
    font-size 62.5%

body
    {font-base}
    font-family 'sweden_sans', Arial, sans-serif
    background color-background
    color color-primary

img
    max-width 100%
    height auto

p, ul, ol, img
    margin-bottom paragraph-space

ul
    list-style-position inside

main
    flex 1

h1, h2, h3, h4, h5, h6
    {font-medium}
    +above(beta)
        {font-xlarge}

a
    {z-transition}
    text-decoration none
    color inherit
    &:hover
        color color-accent

p a
    color color-accent
    font-weight bold
    &:hover
        text-decoration underline

.content
    margin-top 3rem
    +above(alpha)
        col(2/3)
.sidebar
    margin-top 3rem
    +above(alpha)
        col(1/3)

p code
    background color-primary
    color white
    padding .25rem .5rem