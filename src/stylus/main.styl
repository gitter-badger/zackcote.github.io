//zackcote.com main stylesheet

//vendor
@import 'vendor/jeet/*'
@import 'vendor/rupture/*'
@import 'vendor/normalize'

//partials
@import 'partials/variables'
@import 'partials/defaults'
@import 'partials/unsorted'

// edit()

h1,h2,h3,h4,h5,h6
	margin 0 
	font-weight 100

body
	font-size .95rem
	font-family "open-sans", sans-serif
	margin 0
	height auto
	line-height 1.6rem
	letter-spacing .02rem

.wrap
  display flex
	flex-direction column
	min-height 100vh

.header
	color darken(white, 5%)
	padding 2rem 1rem .5rem 1rem
	background-color zack-blue
	width 100%
	+above(30rem)
		padding 2rem 3.1rem 1rem 3.1rem
		height 100vh
		width 30rem

.content
	flex 1
		

